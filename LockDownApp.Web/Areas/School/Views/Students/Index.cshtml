@model IEnumerable<LockDownApp.Web.ViewModels.SchoolViewModel.StudentViewModel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
    <a href="/School/Students/Create" class="btn btn-primary">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.StudentName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ContactNo)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.StudentName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ContactNo)
                </td>
                <td>
                    @*<a href="/School/Students/Edit/@item.Id" class="btn btn-primary">Edit</a>*@
                    <a href="@Url.Action("Edit","Students",new { area="School",id=item.Id})" class="btn btn-primary">Edit</a>
                    @*<a asp-action="Edit" asp-route-id="@item.Id">Edit</a>*@ |
                    @*<a href="/School/Students/Details" class="btn btn-primary">Detail</a>*@
                    <a href="@Url.Action("Details","Students",new { area="School",id=item.Id})" class="btn btn-info">Detail</a>
                    |
                    @*<a href="/School/Students/Delete" class="btn btn-danger">Delete</a>*@
                    <a href="@Url.Action("Delete","Students",new { area="School",id=item.Id})" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
